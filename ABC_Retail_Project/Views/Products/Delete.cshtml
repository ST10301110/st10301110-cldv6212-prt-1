@model Product

@{
    ViewData["Title"] = "Delete Product";
}

<h2>Delete Product</h2>

<h3>Are you sure you want to delete this product?</h3>

<div>
    <h4>@Model.Name</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Name</dt>
        <dd class="col-sm-10">@Model.Name</dd>

        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>

        <dt class="col-sm-2">Price</dt>
        <dd class="col-sm-10">R @Model.Price.ToString("N2")</dd>

        <dt class="col-sm-2">Stock Quantity</dt>
        <dd class="col-sm-10">@Model.StockQuantity</dd>

        <dt class="col-sm-2">Image</dt>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px;" />
            }
            else
            {
                <span>No image</span>
            }
        </dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="RowKey" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
