@model Order
@{
    ViewData["Title"] = "Order Details";
}

<h2>Order Details</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}

<div class="row">
    <div class="col-md-6">
        <h4>Order Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-4">Order ID</dt>
            <dd class="col-sm-8">@Model.RowKey</dd>

            <dt class="col-sm-4">Customer</dt>
            <dd class="col-sm-8">@Model.CustomerName</dd>

            <dt class="col-sm-4">Product</dt>
            <dd class="col-sm-8">@Model.ProductName</dd>

            <dt class="col-sm-4">Quantity</dt>
            <dd class="col-sm-8">@Model.Quantity</dd>

            <dt class="col-sm-4">Total Amount</dt>
            <dd class="col-sm-8">@Model.FormattedTotalAmount</dd>

            <dt class="col-sm-4">Order Date</dt>
            <dd class="col-sm-8">@Model.FormattedOrderDate</dd>

            <dt class="col-sm-4">Status</dt>
            <dd class="col-sm-8">
                <span class="@Model.GetStatusBadgeClass()">@Model.Status</span>
            </dd>
        </dl>
    </div>

    <div class="col-md-6">
        <h4>Update Status</h4>
        <hr />
        <form asp-action="UpdateStatus" method="post">
            <input type="hidden" name="id" value="@Model.RowKey" />
            <div class="form-group">
                <label for="newStatus">New Status:</label>
                <select name="newStatus" class="form-control" required>
                    <option value="">Select New Status</option>
                    @foreach (var status in Order.GetAllStatuses())
                    {
                        if (Model.CanUpdateStatus(status))
                        {
                            <option value="@status">@status</option>
                        }
                    }
                </select>
                <small class="form-text text-muted">
                    Current status: <strong>@Model.Status</strong>
                </small>
            </div>
            <button type="submit" class="btn btn-primary">Update Status</button>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model.RowKey" class="btn btn-warning">Edit Order</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</div>